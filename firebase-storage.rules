rules_version = '2';

// Regras do Firebase Storage para sindoca-3640b.firebasestorage.app
// Configure em: https://console.firebase.google.com/project/sindoca-3640b/storage/rules

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regras para a pasta gallery
    match /gallery/{filename} {
      // Permitir leitura pública de todas as imagens
      allow read: if true;
      
      // Permitir upload de imagens até 5MB
      allow create: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      
      // Permitir delete de qualquer imagem (você e sua namorada)
      allow delete: if true;
      
      // Permitir update de metadata
      allow update: if true;
    }
    
    // Bloquear acesso a outras pastas
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
